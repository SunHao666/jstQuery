<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/home_bg"
    android:layout_height="match_parent">
    <include android:id="@+id/top" layout="@layout/top_logo"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_bottom"
        layout="@layout/home_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_17"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="vertical"
        android:background="@drawable/query_item_shpe"
        android:layout_below="@id/top"
        android:layout_above="@id/home_bottom"
        android:alpha="0.3">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_above="@id/home_bottom"
        android:orientation="vertical"
        android:layout_below="@id/top"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_30"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_20"
            >
            <ImageView
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:background="@drawable/kucun_shaixuan_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thquery"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>

        <com.hao.jstquery.view.QueryItemScanView
            android:id="@+id/th1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/th1"
            />

        <com.hao.jstquery.view.QueryItemScanView
            android:id="@+id/th2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:title="@string/th2"
            />

        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/th3"
            />

        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/th4"
            />

        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/bshh"
            />


        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/th7"
            />


        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/th8"
            />


        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:name="@string/startdata"
            />


        <com.hao.jstquery.view.QueryItemView
            android:id="@+id/th9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:name="@string/enddata"
            android:layout_marginTop="@dimen/dp_10"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_query"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:id="@+id/lay_query"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="@drawable/query_button_select"
                android:orientation="horizontal">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/baosun_shaixuan_search"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/query"
                    android:textColor="@color/white"
                    android:padding="@dimen/dp_7"
                    android:gravity="center"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>